<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:baselineAligned="true"
    android:rowCount="11"
    android:columnCount="3"
    android:useDefaultMargins="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Who"
        android:id="@+id/textView"
        android:layout_column="0"
        android:textAlignment="textEnd"
        android:padding="5dp"
        android:layout_gravity="center_vertical|right"
        android:layout_row="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="What"
        android:id="@+id/textView2"
        android:layout_column="0"
        android:padding="5dp"
        android:textAlignment="textEnd"
        android:layout_gravity="center_vertical|right"
        android:layout_row="1" />

    <EditText
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:id="@+id/whatEditText"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_columnSpan="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Where"
        android:id="@+id/textView3"
        android:layout_column="0"
        android:padding="5dp"
        android:textAlignment="textEnd"
        android:layout_gravity="center_vertical|right"
        android:layout_row="2" />

    <EditText
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/whereEditText"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_columnSpan="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="When"
        android:id="@+id/textView4"
        android:layout_column="0"
        android:padding="5dp"
        android:textAlignment="textEnd"
        android:layout_gravity="center_vertical|right"
        android:layout_row="3" />

    <TextView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateEditText"
        android:layout_column="1"
        android:hint="Date"
        android:clickable="true"
        android:layout_row="3"
        android:layout_columnSpan="2"
        android:padding="5dp"
        android:layout_gravity="center_vertical"
        android:onClick="dateFieldClicked" />

    <TextView
        android:layout_width="260dp"
        android:layout_height="28dp"
        android:ems="10"
        android:id="@+id/timeEditText"
        android:layout_column="1"
        android:hint="Time"
        android:layout_row="4"
        android:layout_columnSpan="2"
        android:onClick="timeFieldClicked"
        android:contextClickable="false"
        android:clickable="true"
        android:singleLine="false"
        android:textIsSelectable="false"
        android:padding="5dp"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="5"
        android:layout_columnSpan="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Restrictions"
            android:id="@+id/textView7"
            android:layout_column="7"
            android:padding="5dp"
            android:textAlignment="textEnd" />

        <Button
            android:layout_width="30dp"
            android:layout_height="43dp"
            android:text="\?"
            android:id="@+id/restrictionsButton"
            android:elegantTextHeight="true"
            android:clickable="true"
            android:onClick="restrictionsHintButtonClicked" />
    </LinearLayout>

    <EditText
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/restrictionsEditText"
        android:layout_column="2"
        android:layout_row="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gift Ideas"
        android:id="@+id/textView6"
        android:layout_column="0"
        android:padding="5dp"
        android:textAlignment="textEnd"
        android:layout_gravity="center_vertical|right"
        android:layout_row="6" />

    <EditText
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:id="@+id/giftIdeasEditText"
        android:layout_column="1"
        android:layout_row="6"
        android:layout_columnSpan="2" />

    <EditText
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/whoEditText"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_columnSpan="2" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request RSVP?"
        android:id="@+id/requestRSVPToggleButton"
        android:layout_column="2"
        android:checked="false"
        android:textOff="Request RSVP?"
        android:textOn="Request RSVP?"
        android:layout_row="7" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="10"
        android:layout_column="2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preview"
            android:id="@+id/previewInviteButton"
            android:layout_row="2"
            android:layout_column="8"
            android:onClick="previewInviteButtonClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/sendInvitebutton"
            android:layout_row="10"
            android:layout_column="0"
            android:onClick="sendInviteButtonClicked" />
    </LinearLayout>

</GridLayout>